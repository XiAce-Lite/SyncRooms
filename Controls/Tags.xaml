<UserControl
    x:Class="SyncRooms.Controls.Tags"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cv="clr-namespace:SyncRooms.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SyncRooms.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="30"
    d:DesignWidth="200"
    mc:Ignorable="d">

    <UserControl.Resources>
        <cv:TagConverter x:Key="TagConverter" />
    </UserControl.Resources>

    <Grid>
        <Border
            Width="Auto"
            Height="Auto"
            Margin="1,1,1,1"
            Background="LightGreen"
            BorderBrush="LightGreen"
            BorderThickness="0"
            CornerRadius="4">
            <VirtualizingStackPanel
                Width="Auto"
                Orientation="Vertical"
                VirtualizingPanel.IsContainerVirtualizable="True"
                VirtualizingPanel.IsVirtualizing="True"
                VirtualizingPanel.VirtualizationMode="Recycling">

                <Label
                    x:Name="TagLabel"
                    Width="Auto"
                    Padding="4,2,4,1"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    FontSize="11"
                    FontStretch="UltraCondensed"
                    Foreground="Black">
                    <TextBlock d:Text="sampleTag" Text="{Binding Converter={StaticResource TagConverter}}" />
                </Label>

            </VirtualizingStackPanel>
        </Border>
    </Grid>

</UserControl>
